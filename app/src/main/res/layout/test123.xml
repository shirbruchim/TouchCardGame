<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_primero"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.codeclan.com.primeroapp.PrimeroActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/welcome" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/player1Card4View"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playButton"
        android:onClick="onPlayButtonPressed"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/player1Card2View" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/player2Card4View"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/player1Card3View"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/player2Card2View"
        android:layout_alignTop="@+id/player2Card3View"
        android:layout_alignEnd="@+id/player1Card2View"
        android:layout_marginEnd="20dp" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/player2Card3View"
        android:layout_alignTop="@+id/player2Card4View"
        android:layout_toEndOf="@+id/player2Card2View" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/player2Card1View"
        android:layout_alignTop="@+id/player2Card2View"
        android:layout_alignStart="@+id/player1Card1View"
        android:layout_marginStart="12dp" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/player1Card1View"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/player1Card4View"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/player1Card2View"
        android:layout_alignTop="@+id/player1Card1View"
        android:layout_toEndOf="@+id/player2Card1View" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/player1Card3View"
        android:layout_alignTop="@+id/player1Card2View"
        android:layout_centerHorizontal="true"
        android:layout_alignEnd="@+id/player2Card3View" />
</RelativeLayout>